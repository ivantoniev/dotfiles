"For Neovim > 0.1.5 and Vim > patch 7.4.1799 < https://github.com/vim/vim/commit/61be73bb0f965a895bfb064ea3e55476ac175162 >
"Based on Vim patch 7.4.1770 (`guicolors` option) < https://github.com/vim/vim/commit/8a633e3427b47286869aa4b96f2bfc1fe65b25cd >
" < https://github.com/neovim/neovim/wiki/Following-HEAD#20160511 >
if (has("termguicolors"))
  set termguicolors
endif

"These are needed so ctrlp works with big nested codebase
let g:ctrlp_max_files=0
let g:ctrlp_max_depth=40
let g:ctrlp_working_path_mode = ''

"ALE gotodef
let g:ale_completion_enabled = 1

" tell COC where node is
let g:coc_node_path='/Users/ivanivanov/.nvm/versions/node/v16.1.0/bin/node'

" Neovide specifics
let g:neovide_cursor_vfx_mode = "" " use value railgun for cool effect
let g:neovide_cursor_animation_length = 0.001

" Allow neovim to use global clipboard
set clipboard+=unnamedplus

